<%- include('./partials/navbar') %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <style>
      /* Custom Styles */
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f3f4f6;
        color: #1a202c;
      }
      .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
      }
      .form-container {
        max-width: 400px;
        margin: 0 auto;
      }
      .form-input {
        appearance: none;
        border: 1px solid #d1d5db;
        border-radius: 0.375rem;
        padding: 0.75rem 1rem;
        width: 100%;
        font-size: 1rem;
        line-height: 1.5;
        color: #1a202c;
        background-color: #fff;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
      }
      .form-input:focus {
        outline: none;
        border-color: #fbbf24;
        box-shadow: 0 0 0 3px rgba(251, 191, 36, 0.3);
      }
      .form-button {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        font-weight: 600;
        color: #fff;
        text-align: center;
        vertical-align: middle;
        border: none;
        border-radius: 0.375rem;
        background-color: #2d6cea;
        transition: background-color 0.15s ease-in-out;
        cursor: pointer;
      }
      .form-button:hover {
        background-color: #5e83f3d6;
      }
    </style>
  </head>
  <body>
    <!-- Login Form -->
    <div class="container mx-auto py-8">
      <div class="form-container bg-white shadow-md rounded px-8 py-8">
        <h1 class="text-3xl font-semibold text-gray-800 mb-6 text-center">
          Login
        </h1>

        <% if (message) { %>
        <p class="text-red-500 mb-4 text-center"><%= message %></p>
        <% } %>

        <form action="/viewLoginPage" method="POST">
          <div class="mb-4">
            <label
              for="email"
              class="block text-gray-700 text-sm font-bold mb-2"
              >Email:</label
            >
            <input
              type="email"
              id="email"
              name="email"
              required
              class="form-input"
              placeholder="Enter your email address"
            />
          </div>

          <div class="mb-6">
            <label
              for="password"
              class="block text-gray-700 text-sm font-bold mb-2"
              >Password:</label
            >
            <input
              type="password"
              id="password"
              name="password"
              required
              class="form-input"
              placeholder="Enter your password"
            />
          </div>

          <div class="flex items-center justify-center">
            <button type="submit" class="form-button">Login</button>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
