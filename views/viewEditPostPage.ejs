<%- include('./partials/navbar') %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
    />
    <title>Edit Post</title>
    <style>
      /* Custom Styles */
      body {
        font-family: "Inter", sans-serif;
        background-color: #f3f4f6;
        color: #1a202c;
      }
      .container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
      }
      .form-label {
        font-size: 0.875rem;
        font-weight: 600;
        color: #4a5568;
        margin-bottom: 0.5rem;
      }
      .form-input {
        width: 100%;
        padding: 0.75rem;
        font-size: 1rem;
        border-radius: 0.375rem;
        border: 1px solid #cbd5e0;
        transition: border-color 0.2s ease;
      }
      .form-input:focus {
        outline: none;
        border-color: #cbd5e0;
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.5);
      }
      .form-button {
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        font-weight: 600;
        color: #fff;
        background-color: #4f46e5;
        border-radius: 0.375rem;
        transition: background-color 0.2s ease;
      }
      .form-button:hover {
        background-color: #4338ca;
      }
    </style>
  </head>
  <body class="bg-gray-100">
    <div class="container mx-auto py-8">
      <h1 class="text-3xl font-semibold text-gray-800 mb-6 text-center">
        Edit Post
      </h1>

      <form
        action="/admin/posts/edit/<%= post._id %>"
        method="POST"
        class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4"
      >
        <!-- Edit Post Form -->
        <div class="mb-4">
          <label for="title" class="form-label">Title:</label>
          <input
            type="text"
            id="title"
            name="title"
            value="<%= post.title %>"
            required
            class="form-input"
          />
        </div>

        <div class="mb-4">
          <label for="intro" class="form-label">Introduction:</label>
          <textarea
            id="intro"
            name="intro"
            rows="4"
            required
            class="form-input"
          >
<%= post.intro %></textarea
          >
        </div>

        <div class="mb-4">
          <label for="content" class="form-label">Content:</label>
          <textarea
            id="content"
            name="content"
            rows="8"
            required
            class="form-input"
          >
<%= post.content %></textarea
          >
        </div>

        <div class="mb-4">
          <label for="author" class="form-label">Author:</label>
          <input
            type="text"
            id="author"
            name="author"
            value="<%= post.author %>"
            required
            class="form-input"
          />
        </div>

        <div class="mb-4">
          <label for="image" class="form-label">Image URL:</label>
          <input
            type="text"
            id="image"
            name="image"
            value="<%= post.image %>"
            class="form-input"
          />
        </div>

        <div class="flex justify-end">
          <button type="submit" class="form-button">Update Post</button>
        </div>
      </form>
    </div>
  </body>
</html>
